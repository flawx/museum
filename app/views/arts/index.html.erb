<div class="topnav">
  <a class="active" href="<%= arts_path %>">Nature & animaux</a>
  <a href="<%= new_art_path %>">Ajouter une œuvre</a>
</div>

<div class="separator"></div>

<p id="notice"><%= notice %></p>

<div class="slideshow-container">
  <% @arts.each do |art| %>
    <div class="mySlides fade">
      <div class="numbertext"><%= link_to 'Voir', art %> | <%= link_to 'Modifier', edit_art_path(art) %> | <%= link_to 'Supprimer', art, method: :delete, data: { confirm: 'Voulez-vous vraiment supprimer cette œuvre ? Cette action est irréversible.' } %></div>
        <img src="<%= art.photo %>" style="width:100%">
      <div class="text"><%= art.author %>, <i><%= art.title %></i>, <%= art.date %></div>
    </div>
  <% end %>

  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>